{
  "name": "ignition-spark-design-system",
  "version": "1.0.0",
  "description": "Comprehensive React + TypeScript design system with 53 components. 100% token-based architecture.",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "design-system/COMPONENTS.md",
    "design-system/TOKENS.md",
    "design-system/AI-PROTOTYPING.md",
    "design-system/ILLUSTRATIONS_GUIDE.md",
    "design-system/README.md",
    "design-system/components/*/GUIDELINES.md",
    "design-system/guidelines/**/*.md",
    "design-system/illustrations/README.md",
    "design-system/assets/logos/README.md",
    "scripts/postinstall.js",
    "scripts/CLAUDE.template.md",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./tokens": {
      "import": "./dist/tokens.js",
      "types": "./dist/types/tokens/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build --config vite.config.lib.ts && tsc -p tsconfig.lib.json",
    "prepublishOnly": "npm run build:lib",
    "postinstall": "node scripts/postinstall.js || true",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "typecheck": "tsc --noEmit",
    "css-types": "tcm src",
    "css-types:watch": "tcm src --watch"
  },
  "keywords": [
    "design-system",
    "react",
    "typescript",
    "components",
    "ui-library",
    "figma",
    "design-tokens",
    "css-modules",
    "ignition"
  ],
  "author": "Ignition Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ignition/spark-design-system"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "playwright": "^1.56.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.5.3",
    "vite": "^5.3.4",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^2.0.5"
  }
}
